<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="90dp"
    android:layout_height="210dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
 <TextView
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:text="Now"
     android:id="@+id/timeshow"
     android:textColor="@color/white"
     android:textSize="13sp"
     android:padding="10dp"
     app:layout_constraintLeft_toLeftOf="parent"
     app:layout_constraintTop_toTopOf="parent"
     android:layout_marginTop="10dp"
     android:textStyle="bold"
     android:layout_marginLeft="10dp"

     />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:id="@+id/tempuraturebelowtime"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/timeshow"
        android:text="28"
        android:layout_marginTop="5dp"
        android:padding="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textStyle="bold"
        android:layout_marginLeft="10dp"
        />
    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/imageweatherbelowtemp"
        app:layout_constraintTop_toBottomOf="@id/tempuraturebelowtime"
        android:layout_marginTop="5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="10dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="28"
        android:id="@+id/windspeed"
        android:layout_marginTop="2dp"
        android:padding="10dp"
        android:layout_marginStart="10dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="13sp"
        app:layout_constraintTop_toBottomOf="@id/imageweatherbelowtemp"
        app:layout_constraintLeft_toLeftOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>